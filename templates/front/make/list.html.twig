{% extends 'base.html.twig' %}

{% block title %}Liste des marques{% endblock %}

{% block body %}
<div class="container my-4">
    <a href="{{path ('make_create')}}" class="btn btn-success float-end">Ajouter</a>

    <h2>Liste de marques</h2>
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Constructeur</th>
                <th scope="col"></th>

                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for make in makes %}
            <tr>
                <th scope="row">{{make.id}}</th>
                <td>{{make.name}}</td>
 
                <td class="text-end">
                    <a href="{{path ('make_update', {id: make.id})}}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="bi bi-trash"></i>
                        </button>
                        <div class="dropdown-menu">
                            <p class="">...tu es s√ªr?</p>
                            <a class="dropdown-item" href="{{path ('make_delete', {id: make.id})}}" data-toggle="dropdown">YES!</a>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="col-12 p-4 d-flex flex-column position-static bg-light">
      
        <a href="{{ path('make_read') }}" class="btn btn-danger">Retour</a>
    </div>
</div>
{% endblock %}