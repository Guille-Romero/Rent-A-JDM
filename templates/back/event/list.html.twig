{% extends 'base-back.html.twig' %}

{% block title %}Event List{% endblock %}

{% block body %}
<div class="container my-4">
    <a href="{{path ('back_event_create')}}" class="btn btn-success float-end">Add event</a>
    <h2>Event list</h2>
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Type</th>
                <th scope="col">Car</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <th scope="row">{{event.id}}</th>
                <td>{{event.name}}</td>
                <td>{% for car in event.car %}
                        {{ car.make.name}} {{ car.model }} {{ car.chassis }} 
                        {% if not loop.last %}, {% endif %}
                    {% endfor %}</td>
                <td>{{event.image}}</td>
                <td class="text-end">
                    <a href="{{path ('back_event_update', {id: event.id})}}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="bi bi-trash"></i>
                        </button>
                        <div class="dropdown-menu bg-dark text-white">
                            <p class="ps-3">you sure?!</p>
                            <a class="dropdown-item bg-danger" href="{{path ('back_event_delete', {id: event.id})}}" data-toggle="dropdown">YES!</a>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="col-12 p-4 d-flex flex-column position-static bg-light">
            <a href="{{ path('back_main') }}" class="btn btn-danger">Back</a>
       
    </div>
</div>
{% endblock %}
